<section class="top-menu">
  <%= link_to '#' do %>
    <%= content_tag :span, t(:active), class: "top-menu__item-first top-menu__active" %>
  <% end %>
  <%= link_to "#" do %>
    <%= content_tag :span, t(:archive), class: "top-menu__item" %>
  <% end %>
</section>

<section class="customer__body">
    <div class="customer-body-wrapper">

      <% if @projects %>
        
        <% @projects.each do |project| %>

          <a class="customer__link-a" href=<%= project_applies_path(project) %> >
            <div class="customer__apply-item">
            <%= render partial: 'shared/apply_cards/apply-card', locals: {project: project} %>
            </div>
          </a>

        <% end %>

          <%= link_to new_project_path, class:'customer__apply-item background-color-empty-card' do %>
             <%= render partial: 'shared/apply_cards/apply-card-empty' %>
          <%end %>

      <% else %>

        <div class="apply-card-zero_state">

          <div class="apply-card-zero_state-title"><%= t(:create_your_first_project) %></div>

          <%= link_to new_project_path, class:'customer__apply-item background-color-empty-card' do %>
          <%= render partial: 'shared/apply_cards/apply-card-empty' %>
        <%end %>

        </div>

      <% end %>
    </div>
</section>
