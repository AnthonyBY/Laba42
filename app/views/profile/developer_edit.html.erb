<div class="user-form">
  <h1 class="user-form__title"><%= t(:profile_edit) %></h1>
  <h6 class="user-form__title1"><%= "(Заполненый профиль может склонить заказчика отдать проект именно тебе)" %></h6>
  <%= form_with url: profile_path, method: :patch do %>

    <div class="form-field">
      <%= text_field_tag :name, @user.name, placeholder:  t(:name) %>
    </div>

    <div class="form-field" id="phone-mask">
      <%= text_field_tag :phone_number, @user.phone_number, placeholder:  t(:input_phone) %>
    </div>

    <div class="form-field mb-3">
      <%= text_field_tag :info, @user.info, placeholder:  t(:about_yourself) %>
    </div>

    <h2 style="text-align:center;">
      <%= t(:skills) %>
    </h2>

    <div class="checkbox-block__skills">
      <% User::SKILLS.each_with_index do |value, index| %>
        <div class="ck-button">
          <%= check_box_tag 'skills[]', value, @user.skills.include?(value), id: "user_skills_#{index}" %>
          <%= label_tag("user_skills_#{index}", value) %>
        </div>
      <% end %>
    </div>

    <div class="user-form__center">
      <h4 style="text-align:center;">Часовой пояс</h4>
      <%= time_zone_select('user', 'time_zone', nil, default: 'Minsk') %>
    </div>

    <div class="user-form__center">
      <%= submit_tag t(:save), class: "button button--blue button--large user-form__button"%>
    </div>
  <% end %>
</div>
