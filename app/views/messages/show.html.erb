<style type="text/css">
    hr {
    border: none; /* Убираем границу */
    background-color: silver; /* Цвет линии */
    height: 1px; /* Толщина линии */
   }

   TABLE {
    width: 100%; /* Ширина таблицы */
    border-spacing: 7px 5px; /* Расстояние между границ */
   }
   TD {
    padding: 5px; /* Поля в ячейках */
   }
</style>

<h1>Переписка с <%= params[:id] %></h1>
<hr>
<br>
<br>
<table>
  <% @messages.each do |message| %>
    <tr>
      <% if message.user.id == current_user.id %>
        <td align="right" width="80%" class="project__title"><font color="gray"><%= message.body_message %></font></td>
      <% else %>
        <td align="left" width="80%" class="project__title"><font color="#617af9"><%= message.body_message %></font></td>
      <% end %>
      <td align="center" width="20%"><%= message.created_at.in_time_zone.strftime('%H:%M %d/%m/%Y') %></td>
    </tr>
  <% end %>
</table>
